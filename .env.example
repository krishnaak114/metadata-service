# ── Application ───────────────────────────────────────────────────────────────
APP_NAME=Metadata Service
ENVIRONMENT=development
LOG_LEVEL=INFO
API_PREFIX=/api/v1

# ── MySQL Database ────────────────────────────────────────────────────────────
DATABASE_URL=mysql+pymysql://metadata_user:metadata_pass@db:3306/metadata_db

# DB pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_PRE_PING=true
